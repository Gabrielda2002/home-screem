---
interface Props {
  title: string;
  icon: string;
  bgColor: string;
  url: string;
}

const { title, icon, bgColor, url } = Astro.props;
---

<div
  class={`p-3 rounded-xl text-card-foreground shadow-md hover:shadow-lg hover:scale-95 transition-all duration-300 h-auto ${bgColor}`}
>
  <a href={url} class="flex flex-col items-center gap-1">
    <span class="text-2xl">{icon}</span>
    <span class="text-gray-900 text-sm font-semibold">{title}</span>
  </a>
</div>
