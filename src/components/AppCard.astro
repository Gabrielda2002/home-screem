---
interface Props {
  title: string;
  icon: string;
  bgColor: string;
  url: string;
}

const { title, icon, bgColor } = Astro.props;
---

<div
  class={`p-6 rounded-xl shadow-sm hover:shadow-md transition-shadow w-full max-h-max ${bgColor}`}
>
  <div class="flex flex-col items-center gap-3">
    <span class="text-4xl">{icon}</span>
    <span class="text-gray-700 text-sm font-medium">{title}</span>
  </div>
</div>
