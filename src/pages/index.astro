---
import Layout from "../layouts/Layout.astro";
import AppCard from "../components/AppCard.astro";
import SectionTitle from "../components/SectionTitle.astro";
import Time from "../components/Time.astro";

//images
import NuevaEps from "../images/Convenios/LOGO-NUEVA-EPS.png?url";
import Compensar from "../images/Convenios/LOGO-COMPENSAR.png?url";
import Coosalud from "../images/Convenios/COOSALUD.png?url";
---

<Layout title="Nordvital IPS">
  <main class="w-full h-screen min-h-auto flex flex-col lg:flex-row">
    <!-- Left Section -->
    <div
      class="w-full lg:w-1/2 bg-gradient-to-br from-teal-500 to-blue-400 relative overflow-hidden flex items-center justify-center p-4"
    >
      <!-- Decoration -->
      <div
        class="absolute top-0 left-0 h-60 w-60 rounded-full bg-slate-100 opacity-20"
      >
      </div>
      <div
        class="absolute bottom-0 right-0 h-72 w-72 rounded-full bg-white opacity-20"
      >
      </div>
      <div
        class="absolute top-1/6 right-1/4 h-20 w-20 rounded-lg bg-slate-100 opacity-20 rotate-45"
      >
      </div>
      <div
        class="absolute bottom-1/7 left-1/4 h-24 w-24 rounded-full border-4 border-white opacity-30"
      >
      </div>

      <div class="p-9 z-10 max-w-[95%] mx-auto text-center">
        <h1 class="text-4xl lg:text-6xl font-bold text-slate-800 mt-6">
          Bienvenidos a
          <span class="text-[#ffffff] block mt-">Nordvital IPS</span>
        </h1>
        <div class="flex items-center justify-center mt-4 text-gray-200">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 mr-2"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <p class="text-gray-200">
            <Time />
          </p>
        </div>
        <!-- Nordvital ips -->
        <section class="mt-5">
          <SectionTitle title="" image="" />
          <div
            class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-4 justify-center text-center"
          >
            <AppCard
              title="Página Web Institucional"
              icon="👨‍💻"
              bgColor="bg-gradient-to-br from-teal-200/40 to-cyan-400/80 hover:to-cyan-400"
              url="https://www.nordvitalips.com/"
            />
            <AppCard
              title="Intranet"
              icon="🖥️"
              bgColor="bg-gradient-to-br from-teal-200/40 to-cyan-400/80 hover:to-cyan-400"
              url="https://app.nordvitalips.com"
            />
            <AppCard
              title="Sharepoint"
              icon="📑"
              bgColor="bg-gradient-to-br from-teal-200/40 to-cyan-400/80 hover:to-cyan-400"
              url="https://nordvitalipscucuta.sharepoint.com/sites/NORDVITAL/SitePages/Noticias-NordVital-IPS.aspx"
            />
            <AppCard
              title="Tharsis"
              icon="💻"
              bgColor="bg-gradient-to-br from-teal-200/40 to-cyan-400/80 hover:to-cyan-400"
              url="https://hemonet.com/lisnordvital/"
            />
            <AppCard
              title="Plenus"
              icon="👥"
              bgColor="bg-gradient-to-br from-teal-200/40 to-cyan-400/80 hover:to-cyan-400"
              url="https://nordvital.mdplenus.com/nordvitalips/control/ingreso#"
            />
          </div>
        </section>
      </div>
    </div>

    <!-- Right Section -->
    <div
      class="w-full lg:w-2/4 bg-slate-100 -bg-linear-210 p-2 lg:p-2 overflow-y-auto flex-grow"
    >
      <!-- Nueva EPS -->
      <section class="mb-6 m-4">
        <SectionTitle title="" image={NuevaEps} />
        <div
          class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-3 justify-center text-center"
        >
          <AppCard
            title="Pana"
            icon="🅿️"
            bgColor="bg-[#007AD8]/80 hover:bg-[#6FBFEF]"
            url="https://10.150.201.65/pana/index.php"
          />
          <AppCard
            title="Portal Web"
            icon="🌐"
            bgColor="bg-[#007AD8]/80 hover:bg-[#6FBFEF]"
            url="https://portal.nuevaeps.com.co/Portal/home.jspx"
          />
          <AppCard
            title="Facturación"
            icon="💳"
            bgColor="bg-[#007AD8]/80 hover:bg-[#6FBFEF]"
            url="https://app.nuevaeps.com.co/#/"
          />
          <AppCard
            title="Agendar Laboratorios"
            icon="🔬"
            bgColor="bg-[#007AD8]/80 hover:bg-[#6FBFEF]"
            url="https://nordvital.mdplenus.com/nordvital_neps/control/ingreso"
          />
          <AppCard
            title="Pana Ticket"
            icon="🎫"
            bgColor="bg-[#007AD8]/80 hover:bg-[#6FBFEF]"
            url="https://ticket.pana.com.co/ticket/index.php"
          />
          <AppCard
            title="Sigires"
            icon="📝"
            bgColor="bg-[#007AD8]/80 hover:bg-[#6FBFEF]"
            url="https://nuevaeps.sigires.co/"
          />
        </div>
      </section>

      <!-- Compensar -->
      <section class="mb-6 m-4">
        <SectionTitle title="" image={Compensar} />
        <div
          class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 justify-center text-center"
        >
          <AppCard
            title="Plenus"
            icon="👥"
            bgColor="bg-[#F4631A]/80 hover:bg-[#F58760]"
            url="https://nordvital.mdplenus.com/nordvital/control/ingreso"
          />
          <AppCard
            title="SAPWEB"
            icon="📊"
            bgColor="bg-[#F4631A]/80 hover:bg-[#F58760]"
            url="https://verticalsaludsap.compensar.com/"
          />
          <AppCard
            title="Facturación"
            icon="💳"
            bgColor="bg-[#F4631A]/80 hover:bg-[#F58760]"
            url="https://consorcio.elyon.com.co/"
          />
          <AppCard
            title="Portal SAIA"
            icon="📋"
            bgColor="bg-[#F4631A]/80 hover:bg-[#F58760]"
            url="https://pqrscompensarsalud.netsaia.com/views/login/login.php"
          />
          <AppCard
            title="Portal SICU"
            icon="🔒"
            bgColor="bg-[#F4631A]/80 hover:bg-[#F58760]"
            url="https://sicu.compensarsalud.com/SicuWebResponsive/login"
          />
          <AppCard
            title="Portal RISS"
            icon="📑"
            bgColor="bg-[#F4631A]/80 hover:bg-[#F58760]"
            url="https://cs.compensarsalud.com/CherwellPortal/GPS?_=4c62b036#0"
          />
          <AppCard
            title="Transacciones en Línea"
            icon="📲"
            bgColor="bg-[#F4631A]/80 hover:bg-[#F58760]"
            url="https://corporativo.compensar.com/salud/transacciones"
          />
          <AppCard
            title="Plataforma de Aprendizaje"
            icon="📚"
            bgColor="bg-[#F4631A]/80 hover:bg-[#F58760]"
            url="https://proveedoressalud.clapuser.com/"
          />
          <AppCard
            title="Sigires"
            icon="📝"
            bgColor="bg-[#F4631A]/80 hover:bg-[#F58760]"
            url="https://compensar.sigires.co/"
          />
        </div>
      </section>

      <!-- Coodsalud -->
      <section class="m-4">
        <SectionTitle title="" image={Coosalud} />
        <div
          class="grid grid-cols-1 sm:grid-cols-4 gap-4 justify-center text-center"
        >
          <AppCard
            title="Plenus"
            icon="👥"
            bgColor="bg-[#00C040]/80 hover:bg-[#6ED89E]"
            url="https://nordvital.mdplenus.com/nordvital/control/ingreso"
          />
          <AppCard
            title="Portal Afiliados"
            icon="💼"
            bgColor="bg-[#00C040]/80 hover:bg-[#6ED89E]"
            url="https://coosalud.com/"
          />
          <AppCard
            title="Punto fácil"
            icon="🖱️"
            bgColor="bg-[#00C040]/80 hover:bg-[#6ED89E]"
            url="https://portal.coosalud.com/puntofacil/"
          />
          <AppCard
            title="Portal IPS"
            icon="🏥"
            bgColor="bg-[#00C040]/80 hover:bg-[#6ED89E]"
            url="https://portalsalud.coosalud.com/login"
          />
        </div>
      </section>
    </div>
  </main>
</Layout>
